{
  "name": "ts-xsd",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ts-xsd/src",
  "projectType": "library",
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx --test tests/**/*.test.ts",
        "cwd": "{projectRoot}"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx --test --experimental-test-coverage --test-coverage-exclude='**/types.ts' --test-coverage-exclude='tests/**' tests/**/*.test.ts",
        "cwd": "{projectRoot}"
      }
    },
    "typecheck:test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsc -p tsconfig.test.json --noEmit",
        "cwd": "{projectRoot}"
      }
    }
  }
}
