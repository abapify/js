{
  "name": "adt-contracts",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/adt-contracts/src",
  "projectType": "library",
  "tags": ["type:library"],
  "targets": {
    "codegen": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "inputs": [
        "{projectRoot}/adt.config.ts",
        "{projectRoot}/config/**/*",
        "{projectRoot}/tmp/discovery/**/*"
      ],
      "options": {
        "command": "npx adt codegen contracts",
        "cwd": "{projectRoot}"
      },
      "outputs": [
        "{projectRoot}/src/generated/adt",
        "{projectRoot}/docs/adt-endpoints.md"
      ]
    }
  }
}
