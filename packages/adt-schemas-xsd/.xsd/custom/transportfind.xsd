<?xml version="1.0" encoding="UTF-8"?>
<!--
  Transport Find Response Schema
  
  Endpoint: GET /sap/bc/adt/cts/transports?_action=FIND
  Response format: ABAP XML with CTS_REQ_HEADER elements
  
  This is a custom schema because the endpoint is undocumented
  and doesn't have an XSD definition in the SAP ADT SDK.
-->
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:asx="http://www.sap.com/abapxml"
    targetNamespace="http://www.sap.com/abapxml"
    elementFormDefault="qualified">

  <!-- Root element -->
  <xsd:element name="abap" type="asx:abapType"/>

  <!-- ABAP envelope type -->
  <xsd:complexType name="abapType">
    <xsd:sequence>
      <xsd:element name="values" type="asx:valuesType"/>
    </xsd:sequence>
    <xsd:attribute name="version" type="xsd:string"/>
  </xsd:complexType>

  <!-- Values container -->
  <xsd:complexType name="valuesType">
    <xsd:sequence>
      <xsd:element name="DATA" type="asx:dataType"/>
    </xsd:sequence>
  </xsd:complexType>

  <!-- Data container with transport headers -->
  <xsd:complexType name="dataType">
    <xsd:sequence>
      <xsd:element name="CTS_REQ_HEADER" type="asx:ctsReqHeaderType" minOccurs="0" maxOccurs="unbounded"/>
    </xsd:sequence>
  </xsd:complexType>

  <!-- CTS Request Header -->
  <xsd:complexType name="ctsReqHeaderType">
    <xsd:sequence>
      <xsd:element name="TRKORR" type="xsd:string"/>
      <xsd:element name="TRFUNCTION" type="xsd:string"/>
      <xsd:element name="TRSTATUS" type="xsd:string"/>
      <xsd:element name="TARSYSTEM" type="xsd:string"/>
      <xsd:element name="AS4USER" type="xsd:string"/>
      <xsd:element name="AS4DATE" type="xsd:string"/>
      <xsd:element name="AS4TIME" type="xsd:string"/>
      <xsd:element name="AS4TEXT" type="xsd:string"/>
      <xsd:element name="CLIENT" type="xsd:string"/>
      <xsd:element name="REPOID" type="xsd:string"/>
    </xsd:sequence>
  </xsd:complexType>

</xsd:schema>
