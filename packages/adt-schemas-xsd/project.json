{
  "name": "adt-schemas-xsd",
  "targets": {
    "download": {
      "command": "npx p2 download https://tools.hana.ondemand.com/latest -o .cache -f 'com.sap.adt.*' --extract --extract-output .xsd --extract-patterns 'model/*.xsd'",
      "options": {
        "cwd": "{projectRoot}"
      },
      "dependsOn": [],
      "inputs": [],
      "outputs": ["{projectRoot}/.cache", "{projectRoot}/.xsd"],
      "cache": false
    },
    "generate": {
      "command": "npx ts-xsd codegen",
      "options": {
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["download", "ts-xsd:build"],
      "inputs": ["{projectRoot}/.xsd/**/*.xsd", "{projectRoot}/tsxsd.config.ts"],
      "outputs": ["{projectRoot}/src/schemas/generated"]
    }
  }
}
