<?xml version="1.0" encoding="UTF-8"?>
<!--
  abapGit DTEL (Data Element) Schema

  Defines DD04V structure for *.dtel.xml files.

  Uses xs:redefine to extend AbapValuesType with DTEL-specific elements.
  This ensures DD04V can only appear inside asx:values, not as root.
-->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://www.sap.com/abapxml"
           xmlns:asx="http://www.sap.com/abapxml"
           elementFormDefault="unqualified">

  <!-- Include types (brought into asx namespace) -->
  <xs:include schemaLocation="types/dd04v.xsd"/>

  <!-- Redefine AbapValuesType to include DTEL-specific elements -->
  <xs:redefine schemaLocation="asx.xsd">
    <xs:complexType name="AbapValuesType">
      <xs:complexContent>
        <xs:extension base="asx:AbapValuesType">
          <xs:sequence>
            <xs:element name="DD04V" type="asx:Dd04vType" minOccurs="0"/>
          </xs:sequence>
        </xs:extension>
      </xs:complexContent>
    </xs:complexType>
  </xs:redefine>

  <!-- Import abapGit root element -->
  <xs:import schemaLocation="abapgit.xsd"/>

</xs:schema>
