<?xml version="1.0" encoding="UTF-8"?>
<!--
  abapGit DEVC (Package) Schema

  Defines the DEVC structure used in package.devc.xml files.

  Uses xs:redefine to extend AbapValuesType with DEVC-specific elements.
  This ensures DEVC can only appear inside asx:values, not as root.
-->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://www.sap.com/abapxml"
           xmlns:asx="http://www.sap.com/abapxml"
           elementFormDefault="unqualified">

  <!-- Include types (brought into asx namespace) -->
  <xs:include schemaLocation="types/devc.xsd"/>

  <!-- Redefine AbapValuesType to include DEVC-specific elements -->
  <xs:redefine schemaLocation="asx.xsd">
    <xs:complexType name="AbapValuesType">
      <xs:complexContent>
        <xs:extension base="asx:AbapValuesType">
          <xs:sequence>
            <xs:element name="DEVC" type="asx:DevcType" minOccurs="0"/>
          </xs:sequence>
        </xs:extension>
      </xs:complexContent>
    </xs:complexType>
  </xs:redefine>

  <!-- Import abapGit root element -->
  <xs:import schemaLocation="abapgit.xsd"/>

</xs:schema>
