{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["abapify"],
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@abapify/adk": ["packages/adk/src/index.ts"],
      "@abapify/adt-cli": ["packages/adt-cli/src/index.ts"],
      "@abapify/asjson-parser": ["packages/asjson-parser/src/index.ts"],
      "@sap/cds": ["node_modules/@cap-js/cds-types/dist/cds-types.d.ts"],
      "sample": ["packages/sample/src/index.ts"],
      "sample-node": ["sample-node/src/index.ts"],
      "samples/cds": ["samples/cds/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
